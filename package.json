{
  "name": "vanillajs",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass": "sass src/scss/style.scss dist/css/style.min.css --watch --style=compressed",
    "serve": "browser-sync start --server dist --files \"dist/*.html, dist/css/*.css, dist/js/*.js\"",
    "jsbuild": "esbuild src/js/app.js --bundle --outfile=dist/js/bundle.js --watch",
    "watch:html": "onchange \"src/*.html\" -- npm run cp:html && cp:images",
    "watch:template": "onchange \"src/templates/*.html\" -- npm run cp:templates",
    "cp:images": "cp -r ./src/images ./dist",
    "cp:html": "cp ./src/index.html ./dist",
    "cp:templates": "cp -r ./src/templates ./dist",
    "start": "npm-run-all --parallel sass cp:images cp:html cp:templates serve jsbuild watch:html watch:template"
  },
  "devDependencies": {
    "esbuild": "0.25.10",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "sass": "^1.93.2"
  }
}
